<!DOCTYPE html>
<head>
  <%- include header -%>
</head>
<body>
  <%- include nav -%>
  <div class="pure-g-r">
    <div class="pure-u-2-3">
      <% if(typeof(errors) != 'undefined'){ %>
        <div class="panel">
          <p>Sorry, something went wrong:</p>
          <% for(var i=0; i < errors.length; i++){ %>
            <p><%= errors[i] %></p>
          <% } %>
        </div>
      <% } %>
      <form method="POST" action="/register" class="pure-form pure-form-stacked">
        <legend>Register for NodeJack</legend>
        <input name="user[username]" type="text" placeholder="username">
        <input name="user[email]" type="text" placeholder="email">
        <input name="user[password]" type="password" placeholder="password">
        <input name="user[passwordconf]" type="password" placeholder="passwordconf">
        <input type="submit" value="Register">
      </form>
    </div>
